<UserControl x:Class="SimulationInputWindow.Controls.SetInputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimulationInputWindow.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Grid Margin="20 0 0 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Ellipse Width="30"
                 Height="30"
                 Fill="{Binding Value,Converter={StaticResource BooleanToFillOnOffConverter}}"
                 Stroke="LightGray"
                 StrokeThickness="1">
        </Ellipse>
        <TextBlock Grid.Column="1"
                   VerticalAlignment="Center"
                   Text="{Binding Id}"/>
        <Button Content="{Binding Name}"
                Command="{Binding SetValueCommand}"
                Grid.Column="2"/>
    </Grid>
</UserControl>
