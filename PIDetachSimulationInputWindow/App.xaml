<Application x:Class="PIDetachSimulationInputWindow.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PIDetachSimulationInputWindow"
             xmlns:cvt="clr-namespace:PIDetachSimulationInputWindow.Converters"
             xmlns:controls="clr-namespace:PIDetachSimulationInputWindow.Controls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <cvt:BooleanToFillOnOffConverter x:Key="BooleanToFillOnOffConverter"/>
            
            <DataTemplate DataType="{x:Type controls:SetInputViewModel}">
                <controls:SetInputView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
